<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @travel_cost, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name, '項目名' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :budget, '予算(円)' %>
      <%= f.text_field :budget, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :amount_paid, '支払った金額(円)' %>
      <%= f.text_field :amount_paid, class: 'form-control' %>
    </div>
    <%= f.submit '保存', class: 'btn btn-secondary btn-block' %>
    <% end %>
  </div>
</div>
<nav class="navbar fixed-bottom navbar-light bg-light">
  <div class="container-fluid">
    <li class="nav-item"><%= link_to '戻る', :back %></li>
  </div>
</nav>